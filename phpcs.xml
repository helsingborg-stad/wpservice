<?xml version="1.0"?>
<ruleset name="Helsingborg PHP Coding Standards">
    <file>./src</file>
    <rule ref="Hbg-WordPress"></rule>
    
    <rule ref="Squiz.Commenting.DocCommentAlignment"/>
    <rule ref="Squiz.Commenting.BlockComment"/>
    
    <rule ref="Squiz.Commenting.ClassComment.Missing">
        <exclude-pattern>./src/*/*\.test\.php$</exclude-pattern>
    </rule>

    <!-- Do not require function comments for tests -->
    <rule ref="Squiz.Commenting.FunctionComment.Missing">
        <exclude-pattern>./src/*/*\.test\.php$</exclude-pattern>
    </rule>
    
    <!-- Do not require escaping output in tests -->
    <rule ref="WordPress.Security.EscapeOutput.OutputNotEscaped">
        <exclude-pattern>./src/*/*\.test\.php$</exclude-pattern>
    </rule>

    <!-- exclude rule -->
    <rule ref="WordPress.Security.EscapeOutput.ExceptionNotEscaped">
        <exclude-pattern>./src/*/*\.php$</exclude-pattern>
    </rule>
    
    <!-- exclude rule -->
    <rule ref="Generic.Files.LineLength.TooLong">
        <exclude-pattern>./src/*/*\.php$</exclude-pattern>
    </rule>
    
    <!-- exclude rule -->
    <rule ref="PSR2.Methods.MethodDeclaration.Underscore">
        <exclude-pattern>./src/*/*\.php$</exclude-pattern>
    </rule>
    
    <!-- exclude rule -->
    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>./src/*/*\.php$</exclude-pattern>
    </rule>

    <!-- exclude rule -->
    <rule ref="WordPress.Security.EscapeOutput.OutputNotEscaped">
        <exclude-pattern>./src/*/*\.php$</exclude-pattern>
    </rule>
    
    <!-- exclude rule -->
    <rule ref="WordPress.Security.EscapeOutput.UnsafePrintingFunction">
        <exclude-pattern>./src/*/*\.php$</exclude-pattern>
    </rule>
    
    <!-- exclude rule -->
    <rule ref="WordPress.Security.SafeRedirect.wp_redirect_wp_redirect">
        <exclude-pattern>./src/*/*\.php$</exclude-pattern>
    </rule>
    
    <!-- exclude rule -->
    <rule ref="Squiz.Classes.ValidClassName.NotCamelCaps">
        <exclude-pattern>./src/*/*\.php$</exclude-pattern>
    </rule>
    
</ruleset>